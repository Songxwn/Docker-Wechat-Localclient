{
  "name": "wechat-selkies-client",
  "version": "4.5.5",
  "description": "WeChat Selkies 的本地远程客户端",
  "main": "main.js",
  "author": "WeChat Selkies Client",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "build:dir": "electron-builder --win --dir"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.wechat-selkies.client",
    "productName": "WeChat Selkies - 本地远程客户端",
    "icon": "assets/icon.png",
    "artifactName": "WeChat-Selkies-Client-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "publish": null,
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png",
      "createDesktopShortcut": true
    },
    "mac": {
      "category": "public.app-category.social",
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
