{
  "name": "wechat-selkies-client",
  "version": "2.0.0",
  "description": "WeChat Selkies 的本地远程客户端",
  "main": "main.js",
  "author": "WeChat Selkies Client",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.wechat-selkies.client",
    "productName": "WeChat Selkies",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
